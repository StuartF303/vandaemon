@inherits LayoutComponentBase
@inject HttpClient Http
@inject IJSRuntime JSRuntime
@inject SettingsStateService SettingsState
@implements IAsyncDisposable

<style>
    :root {
        /* Light mode colors */
        --nav-bg-light: #f5f5f5;
        --nav-item-hover-light: #e0e0e0;
        --nav-item-active-light: #2196F3;
        --nav-item-active-text-light: #ffffff;
        --nav-text-light: #333333;
        --nav-shadow-light: rgba(0, 0, 0, 0.1);
    }

    [data-theme="dark"] {
        /* Dark mode colors */
        --nav-bg-dark: #1e1e1e;
        --nav-item-hover-dark: #2d2d2d;
        --nav-item-active-dark: #1976D2;
        --nav-item-active-text-dark: #ffffff;
        --nav-text-dark: #e0e0e0;
        --nav-shadow-dark: rgba(0, 0, 0, 0.3);
    }

    .layout-container {
        display: grid;
        height: 100vh;
        width: 100vw;
        overflow: hidden;
        position: relative;
    }

    .layout-container.toolbar-left {
        grid-template-columns: auto 1fr;
        grid-template-rows: 1fr;
        grid-template-areas: "nav main";
    }

    .layout-container.toolbar-right {
        grid-template-columns: 1fr auto;
        grid-template-rows: 1fr;
        grid-template-areas: "main nav";
    }

    .layout-container.toolbar-bottom {
        grid-template-columns: 1fr;
        grid-template-rows: 1fr auto;
        grid-template-areas: "main" "nav";
    }

    .nav-area {
        grid-area: nav;
        background: var(--nav-bg-light);
        box-shadow: 2px 0 8px var(--nav-shadow-light);
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        z-index: 10;
    }

    [data-theme="dark"] .nav-area {
        background: var(--nav-bg-dark);
        box-shadow: 2px 0 8px var(--nav-shadow-dark);
    }

    .toolbar-left .nav-area,
    .toolbar-right .nav-area {
        width: 140px;
        padding: 24px 12px;
    }

    .toolbar-bottom .nav-area {
        width: 100%;
        flex-direction: row;
        justify-content: space-around;
        padding: 16px;
        height: auto;
    }

    .main-area {
        grid-area: main;
        overflow: auto;
        padding: 0;
        height: 100%;
    }

    .nav-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 10px;
        padding: 24px 16px;
        margin: 6px 0;
        border-radius: 16px;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-decoration: none;
        color: var(--nav-text-light);
        min-height: 100px;
        border: 3px solid transparent;
        user-select: none;
        -webkit-tap-highlight-color: transparent;
    }

    [data-theme="dark"] .nav-item {
        color: var(--nav-text-dark);
    }

    .toolbar-bottom .nav-item {
        flex-direction: column;
        padding: 20px 16px;
        margin: 0 6px;
        gap: 10px;
        min-width: 100px;
        min-height: 90px;
    }

    .nav-item:hover {
        background-color: var(--nav-item-hover-light);
        transform: scale(1.05);
        border-color: var(--nav-item-active-light);
    }

    [data-theme="dark"] .nav-item:hover {
        background-color: var(--nav-item-hover-dark);
        border-color: var(--nav-item-active-dark);
    }

    .nav-item.active {
        background-color: var(--nav-item-active-light);
        color: var(--nav-item-active-text-light);
        border-color: var(--nav-item-active-light);
        box-shadow: 0 4px 12px rgba(33, 150, 243, 0.4);
        transform: scale(1.08);
    }

    [data-theme="dark"] .nav-item.active {
        background-color: var(--nav-item-active-dark);
        color: var(--nav-item-active-text-dark);
        border-color: var(--nav-item-active-dark);
        box-shadow: 0 4px 12px rgba(25, 118, 210, 0.5);
    }

    .nav-item-icon {
        font-size: 48px !important;
        width: 48px;
        height: 48px;
        transition: transform 0.2s;
    }

    .nav-item.active .nav-item-icon {
        transform: scale(1.1);
    }

    .nav-item-text {
        font-size: 14px;
        font-weight: 600;
        text-align: center;
        line-height: 1.3;
        letter-spacing: 0.3px;
    }

    .toolbar-bottom .nav-item-icon {
        font-size: 42px !important;
        width: 42px;
        height: 42px;
    }

    .toolbar-bottom .nav-item-text {
        font-size: 13px;
    }

    .fullscreen-toggle {
        position: fixed;
        top: 16px;
        left: 80px;
        z-index: 1000;
        background: var(--nav-bg-light);
        border: 2px solid var(--nav-item-active-light);
        border-radius: 12px;
        padding: 12px;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 2px 8px var(--nav-shadow-light);
        display: flex;
        align-items: center;
        justify-content: center;
        width: 56px;
        height: 56px;
        -webkit-tap-highlight-color: transparent;
    }

    [data-theme="dark"] .fullscreen-toggle {
        background: var(--nav-bg-dark);
        border-color: var(--nav-item-active-dark);
        box-shadow: 0 2px 8px var(--nav-shadow-dark);
    }

    .fullscreen-toggle:hover {
        transform: scale(1.1);
        box-shadow: 0 4px 16px rgba(33, 150, 243, 0.4);
    }

    [data-theme="dark"] .fullscreen-toggle:hover {
        box-shadow: 0 4px 16px rgba(25, 118, 210, 0.5);
    }

    .fullscreen-toggle .mud-icon-root {
        font-size: 32px !important;
        color: var(--nav-text-light);
    }

    [data-theme="dark"] .fullscreen-toggle .mud-icon-root {
        color: var(--nav-text-dark);
    }

    /* Tablet optimizations (600-960px) - icon-only side navigation */
    @@media (min-width: 601px) and (max-width: 960px) {
        .toolbar-left .nav-area,
        .toolbar-right .nav-area {
            width: 80px;
            padding: 8px;
        }

        .toolbar-left .nav-item-text,
        .toolbar-right .nav-item-text {
            display: none;
        }

        .toolbar-left .nav-item,
        .toolbar-right .nav-item {
            justify-content: center;
            padding: 16px 8px;
        }

        .main-area {
            padding: 8px;
        }
    }

    /* Phone portrait mode (max 600px width) - force bottom toolbar */
    @@media (max-width: 600px) and (orientation: portrait) {
        .layout-container {
            grid-template-columns: 1fr !important;
            grid-template-rows: 1fr auto !important;
            grid-template-areas: "main" "nav" !important;
        }

        .nav-area {
            width: 100% !important;
            flex-direction: row !important;
            justify-content: space-around !important;
            padding: 8px !important;
        }

        .nav-item {
            flex-direction: column !important;
            padding: 12px 8px !important;
            margin: 0 !important;
            gap: 4px !important;
            min-width: 70px !important;
            min-height: 64px !important;
        }

        .nav-item-text {
            display: block !important;
            font-size: 11px !important;
        }

        .main-area {
            padding: 8px;
        }
    }

    /* Phone landscape mode (max 900px height) - use configured side toolbar with icons only */
    @@media (max-height: 900px) and (orientation: landscape) and (max-width: 1024px) {
        .toolbar-left .nav-area,
        .toolbar-right .nav-area {
            width: 70px !important;
            padding: 6px !important;
        }

        .toolbar-bottom .nav-area {
            height: 60px !important;
            padding: 6px 8px !important;
        }

        .toolbar-left .nav-item-text,
        .toolbar-right .nav-item-text {
            display: none !important;
        }

        .toolbar-left .nav-item,
        .toolbar-right .nav-item {
            justify-content: center !important;
            padding: 12px 6px !important;
            min-height: 48px !important;
        }

        .toolbar-bottom .nav-item {
            min-width: 60px !important;
            min-height: 48px !important;
            padding: 8px 6px !important;
        }

        .toolbar-bottom .nav-item-text {
            font-size: 10px !important;
        }

        .main-area {
            padding: 8px;
        }
    }
</style>

@if (isLoading)
{
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" />
}
else
{
    <div class="layout-container @GetLayoutClass()">
        @if (showFullscreenToggle)
        {
            <div class="fullscreen-toggle" @onclick="ToggleFullscreen">
                <MudIcon Icon="@(isFullscreen ? Icons.Material.Filled.FullscreenExit : Icons.Material.Filled.Fullscreen)" />
            </div>
        }
        <nav class="nav-area">
            <a href="/" class="nav-item @GetActiveClass("/")">
                <MudIcon Icon="@Icons.Material.Filled.Dashboard" Class="nav-item-icon" />
                <span class="nav-item-text">Dashboard</span>
            </a>
            <a href="/tanks" class="nav-item @GetActiveClass("/tanks")">
                <MudIcon Icon="@Icons.Material.Filled.WaterDrop" Class="nav-item-icon" />
                <span class="nav-item-text">Tanks</span>
            </a>
            <a href="/controls" class="nav-item @GetActiveClass("/controls")">
                <MudIcon Icon="@Icons.Material.Filled.Lightbulb" Class="nav-item-icon" />
                <span class="nav-item-text">Controls</span>
            </a>
            <a href="/settings" class="nav-item @GetActiveClass("/settings")">
                <MudIcon Icon="@Icons.Material.Filled.Settings" Class="nav-item-icon" />
                <span class="nav-item-text">Settings</span>
            </a>
        </nav>
        <main class="main-area">
            @Body
        </main>
    </div>
}

@code {
    [Inject] private NavigationManager NavigationManager { get; set; } = default!;

    private bool isLoading = true;
    private string toolbarPosition = "toolbar-left";
    private string currentPath = "/";
    private string currentTheme = "Light";
    private bool isFullscreen = false;
    private bool showFullscreenToggle = true;
    private bool enableFullscreenOnStartup = true;

    protected override async Task OnInitializedAsync()
    {
        currentPath = new Uri(NavigationManager.Uri).AbsolutePath;
        NavigationManager.LocationChanged += OnLocationChanged;
        SettingsState.SettingsChanged += OnSettingsChanged;

        await LoadSettings();
        isLoading = false;

        // Note: Automatic fullscreen removed - browser security requires user gesture
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            SettingsState.SetJSRuntime(JSRuntime);
            // Apply initial theme
            SettingsState.IsDarkMode = SettingsState.IsDarkMode;
        }
    }

    private async void OnSettingsChanged()
    {
        await LoadSettings();
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadSettings()
    {
        try
        {
            var config = await Http.GetFromJsonAsync<SystemConfigurationDto>("api/settings");
            if (config != null)
            {
                // Use driving side to control toolbar position (bottom only on phone mode via CSS)
                toolbarPosition = config.DrivingSide == "Right" ? "toolbar-right" : "toolbar-left";

                currentTheme = config.Theme ?? "Light";
                SettingsState.IsDarkMode = currentTheme == "Dark";

                showFullscreenToggle = config.ShowFullscreenToggle;
                enableFullscreenOnStartup = config.EnableFullscreenOnStartup;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading settings: {ex.Message}");
            toolbarPosition = "toolbar-left";
            currentTheme = "Light";
            SettingsState.IsDarkMode = false;
            showFullscreenToggle = true;
            enableFullscreenOnStartup = true;
        }
    }

    private async Task EnterFullscreen()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("eval", @"
                if (document.documentElement.requestFullscreen) {
                    document.documentElement.requestFullscreen().catch(err => {
                        console.log('Fullscreen request failed:', err);
                    });
                } else if (document.documentElement.webkitRequestFullscreen) {
                    document.documentElement.webkitRequestFullscreen();
                } else if (document.documentElement.msRequestFullscreen) {
                    document.documentElement.msRequestFullscreen();
                }
            ");
            isFullscreen = true;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error entering fullscreen: {ex.Message}");
        }
    }

    private async Task ExitFullscreen()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("eval", @"
                if (document.exitFullscreen) {
                    document.exitFullscreen();
                } else if (document.webkitExitFullscreen) {
                    document.webkitExitFullscreen();
                } else if (document.msExitFullscreen) {
                    document.msExitFullscreen();
                }
            ");
            isFullscreen = false;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error exiting fullscreen: {ex.Message}");
        }
    }

    private async Task ToggleFullscreen()
    {
        if (isFullscreen)
        {
            await ExitFullscreen();
        }
        else
        {
            await EnterFullscreen();
        }
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentPath = new Uri(e.Location).AbsolutePath;
        StateHasChanged();
    }

    private string GetLayoutClass()
    {
        return toolbarPosition;
    }

    private string GetActiveClass(string path)
    {
        if (path == "/" && currentPath == "/")
            return "active";
        if (path != "/" && currentPath.StartsWith(path))
            return "active";
        return "";
    }

    public ValueTask DisposeAsync()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
        SettingsState.SettingsChanged -= OnSettingsChanged;
        return ValueTask.CompletedTask;
    }

    public class SystemConfigurationDto
    {
        public Guid Id { get; set; }
        public string VanModel { get; set; } = string.Empty;
        public string VanDiagramPath { get; set; } = string.Empty;
        public string ToolbarPosition { get; set; } = "Left";
        public string DrivingSide { get; set; } = "Left";
        public string Theme { get; set; } = "Light";
        public bool EnableFullscreenOnStartup { get; set; } = true;
        public bool ShowFullscreenToggle { get; set; } = true;
        public AlertSettingsDto AlertSettings { get; set; } = new();
        public DateTime LastUpdated { get; set; }
    }

    public class AlertSettingsDto
    {
        public double TankLowLevelThreshold { get; set; }
        public double TankHighLevelThreshold { get; set; }
        public bool EnableAudioAlerts { get; set; }
        public bool EnablePushNotifications { get; set; }
    }
}
